<%= content_for :css do %>

  <link rel="stylesheet" type="text/css" href="/assets/css/outputs.css">  
   
<% end%>

<p id="notice"><%= notice %></p>

<div id="main">

  <section>
    <header id="">
      <h1>Entradas</h1>
      <a href="#"><span id="addIcon" title="Registrar nova saída"></span></a>
      <div id="FILTER">
        <a href="#"><span id="filterIcon">Mostrando últimas dez entradas registradas. Filtro:</span></a>
      </div>
    </header>

  <div id="newOutput">  

    <%= render 'form' %>
  
  </div>

  <div class="hrLine" id="filter">

    <form action="" method="get">

    <b>Período:</b> 
      <input type="text" required="required" name="ini" id="ini" readonly /> a 
      <input type="text" required name="end" id="end" readonly/>
      <br>Ordenar por:
      <select name="orderBy">
        <option value="quantidade">Quantidade</option>
        <option>Data</option>

      </select>
      <button type="submit">Filtrar</button>
    </form>

  </div>

  <div id="show_outputs">
    
    <%= render @inputs %>

  </div>

  </section>

  <%#= render 'shared/movimentacoes' %>

</div>


<script type="text/javascript">

  document.querySelector( "#addIcon" ).addEventListener("click",function(){
    
    document.querySelector( "#newOutput" ).style.display="block";
    this.style.display="none";
    document.querySelector( "#filter" ).style.display="none";
    document.querySelector( "#newItem" ).focus();
    document.querySelector( "#filterIcon" ).style.display="none";
  });

  document.querySelector( "#filterIcon" ).addEventListener("click",function(){
    
    document.querySelector( "#newOutput" ).style.display="none";
    this.style.display="none";
    document.querySelector( "#filter" ).style.display="block";
    
  });


  document.querySelector( "#closeIcon" ).addEventListener("click",function(){
    
    document.querySelector( "#newOutput" ).style.display="none";
    document.querySelector( "#addIcon" ).style.display="block";
    document.querySelector( "#filterIcon" ).style.display="block";
    
  });


 

</script>


