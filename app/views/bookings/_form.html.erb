<%= form_for @booking do |f| %>

   <fieldset>
      
      <%= f.hidden_field :schedule, id: "bookingDate" %>

      <div class="group">
         
         <%= f.text_field :professor, id: "professor" %>         
         <span class="highlight"></span>
         <span class="bar"></span>
         <label for="professor">Professor (a)</label>
      </div>
      <div class="group">

	     <%= f.text_field :discipline, id: "discipline" %>         
         <span class="highlight"></span>
         <span class="bar"></span>
         <label for="discipline">Disciplina</label>
      </div>
      <div class="group">

         <%= f.text_field :classe, id: "class" %>
         <span class="highlight"></span>
         <span class="bar"></span>
         <label for="class">Turma</label>
      </div>
      <div class="group small">

      	 <%= f.number_field :students, id: "number-students" %>         
         <span class="highlight"></span>
         <span class="bar"></span>
         <label for="number-students">Alunos</label>
      </div>
      <div class="group small">

  		 <%= f.text_field :booking_time, id: "number-students", as: :time %>         
         <span class="highlight"></span>
         <span class="bar"></span>
         <label for="time">Hor√°rio</label>
      </div>
      <h3>&rarr;&nbsp;Itens para aula</h3>
      <table>
         <tbody id="items">
