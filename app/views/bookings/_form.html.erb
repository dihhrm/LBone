      </table>
      <!-- <input type="text" id="itemsAutocomplete" name=""  > -->
      <%= f.autocomplete_field :item_name, autocomplete_item_name_bookings_path, id: "booking_item_name itemsAutocomplete", id_element: "#item_id_field", update_attributes: {} %>

      <%= f.hidden_field :id_item, id: "item_id_field" %>
	  
      <input id="itemAm" type="number" value="1" min="1" max="x" >
